<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maldivs.Maldivs_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Main Image -->
        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/your_image" />

        <!-- Back and Share Buttons -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_button" />

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/share" />

        <!-- Title and Review Section -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/share_button"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Koh Rong Samloem"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:paddingStart="16dp"
            android:text="★★★★☆ • 100 reviews"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/read_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reviews"
            android:layout_centerHorizontal="true"
            android:src="@drawable/about"
            android:text="Read all" />

        <!-- Included Items Section -->
        <LinearLayout
            android:id="@+id/included_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/read_all_button">

            <!-- Each item can be a LinearLayout with an ImageView and a TextView -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/mainkk"
                    android:layout_width="327dp"
                    android:layout_height="169dp"
                    android:src="@drawable/ic_bus" />

                <ImageView
                    android:id="@+id/reviewskk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/review" />
                <ImageView
                    android:id="@+id/booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reviewskk"
                    android:src="@drawable/baynaw" />





            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>